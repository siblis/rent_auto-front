.application

  &__step-two
    display grid
    grid-template-columns 3.5fr 3.5fr 3fr
    grid-template-rows 1fr 1fr 1fr 1fr
    grid-auto-flow column
    align-items center
    background-color #fff
    margin 30px 0
    padding 30px
    align-items center
    font-size 1.5rem

    .dropdown-toggle
      width 300px
      font-size 1.5rem
      height 50px
      background-color #E5E5E5
      border-color transparent
      padding 0 0 14px 14px
      color #2DA0A6
      position relative
      padding 0 !important

    .dropdown-toggle:after
      border-top: .8rem solid
      border-right: .8rem solid transparent
      border-bottom: 0;
      border-left: .8rem solid transparent
      position absolute
      maring 0 !important
      top 20px
      right 10px
      padding 0 !important

    .dropdown-menu
      width 300px !important

  &__btn-next--step-two
    grid-row-start 4

  &__checkbox-group
    margin 50px 0 0 0

    input 
      width 25px
      height 25px
      border none
      outline none
      background-color #E5E5E5
      padding 0
      margin 0 50px 0 0

    label 
      font-size 1rem
      padding 0 0 0 50px
