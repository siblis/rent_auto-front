.application
  box-sizing border-box

  &__step-three
    display grid 
    grid-template-columns 3fr 1fr
    grid-template-rows 0.8fr 1fr 1fr 1fr 1fr 0.8fr 1fr 1fr 1fr 1.8fr
    grid-auto-flow column
    grid-gap 5px 30px
    align-items center
    background-color #fff
    margin 30px
    padding 30px
    align-items center
    font-size 1.5rem
    box-sizing border-box

    .form-control
      width 100%

    .dropdown-toggle:after
      display none

  &__wrapper
    display flex

  &__btn-back
    margin 50px 0 0 0

  &__subttl
    margin 10px 0 0 0

  &__btn-submit--step-three
    margin 45px 0 0 0

