.application

  &__step-one
    background-color #fff
    margin 30px 0
    padding 30px
    display grid 
    grid-template-columns 1.5fr 1.5fr 1fr
    grid-template-rows 1fr 1fr 1fr
    grid-auto-flow column
    align-items center
    font-size 1.5rem

    .dropdown-toggle
      padding 0 40px 0 0
      text-align right

  &__btn-next
    grid-row-start 3
    margin-top 70px

  &__block
    margin 32px 0 0 0

  &__input
    display flex 

    .dropdown-toggle
      overflow-x hidden

    .dropdown-menu
      width 400px

    &--date
      .dropdown-menu
        width 100px
        border none

  &__field
    height 50px
    border-radius 5px
    box-sizing border-box
    background-color #E5E5E5

    .rc-time-picker-panel-select
      width 100px !important

  &__icon
    margin-right 10px

  &__price
    font-size 2.25rem

  .bounce
    animation-name bounce
    transform-origin center bottom

  &__error
    color #F60C0C
    border-radius 50%
    border 3px solid #F60C0C
    width 50px
    height 50px
    text-align center
    font-size 1.875rem
    font-weight 700
    margin 0 0 0 20px
    animation-name: bounce;
    transform-origin: center bottom;

  &__invalid
    border 3px solid #F60C0C !important
    animation-name: bounce;
    transform-origin: center bottom;

  &__brand-items
    white-space nowrap
    overflow hidden
