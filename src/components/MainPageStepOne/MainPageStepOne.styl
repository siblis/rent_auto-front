.main-page
  color #2DA0A6

  &__field-name
    font-size 1.75rem
    margin 0 0 20px 0

  .dropdown-toggle
    font-size 1.5rem
    width 200px
    height 50px
    background-color #E5E5E5
    border-color transparent
    padding 0 0 14px 14px
    color #2DA0A6
    position relative
    padding 0 !important

    &:after
      border-top: .8rem solid
      border-right: .8rem solid transparent
      border-bottom: 0;
      border-left: .8rem solid transparent
      position absolute
      maring 0 !important
      top 20px
      right 10px
      padding 0 !important
  
  .dropdown-menu
    width 200px
    
  .form-group
    margin-right 100px
    font-size 1.75rem

  .form-control
    background-color #E5E5E5
    border-color transparent
    width 300px
    height 50px
    font-size 1.5rem

    &::-webkit-input-placeholder
      font-size 1.5rem
      color #9A9B9B

    &:-moz-placeholder
      font-size 1.5rem
      color #9A9B9B

  .rc-time-picker-input
    border 0
    background-color #E5E5E5
    width 200px
    height 50px
    font-size 1.5rem
    text-align right
    padding-right 1.5rem
    color #2DA0A6
  
.application

  &__step-one
    background-color #fff
    margin 30px 0
    padding 30px
    display grid 
    grid-template-columns 1.5fr 1.5fr 1fr
    grid-template-rows 1fr 1fr 1fr
    grid-auto-flow column
    align-items center
    font-size 1.5rem

  &__btn-next
    grid-row-start 3
    margin-top 70px

  &__block
    margin 32px 0 0 0

  &__input
    display flex 

    .dropdown-toggle
      overflow-x hidden

    .dropdown-menu
      width 400px

  &__icon
    margin-right 10px

  &__error
    color #F60C0C
    border-radius 50%
    border 3px solid #F60C0C
    width 50px
    height 50px
    text-align center
    font-size 1.875rem
    font-weight 700
    margin 0 0 0 20px

  &__invalid
    border 3px solid #F60C0C !important

  &__brand-items
    white-space nowrap
    overflow hidden
